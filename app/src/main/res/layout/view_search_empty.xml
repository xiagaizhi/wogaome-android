<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:text="搜索内容"
        android:textColor="@color/color_gray_levelc"
        android:textSize="@dimen/px28"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px80"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/px80"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/px34"
            android:text="音频"
            android:textColor="@color/color_gray_levelc"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/px30"
            android:background="@color/color_gray_levele"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px70"
            android:layout_marginLeft="@dimen/px70"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/px34"
            android:text="活动"
            android:textColor="@color/color_gray_levelc"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>