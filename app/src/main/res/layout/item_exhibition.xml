<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px36"
    android:paddingRight="@dimen/px36"
    android:paddingBottom="@dimen/px52"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:id="@+id/sdv"
        fresco:roundedCornerRadius="5dp"
        android:layout_height="@dimen/px844" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/sdv"
        android:layout_alignTop="@+id/sdv"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/px47"
        android:layout_marginLeft="@dimen/px30"
        android:layout_marginRight="@dimen/px54"
        android:text="主标题名称,主题名称在名称"
        android:textSize="@dimen/px64"
        android:id="@+id/tv_title"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="主办方：浙江宇石网络科技有限公司"
            android:id="@+id/tv_action_company"
            android:layout_marginBottom="@dimen/px30"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/px30"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_action_time"
            android:layout_above="@id/tv_action_company"
            android:text="活动时间: 2018-08-01／08-12"
            android:layout_marginLeft="@dimen/px30"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/px20"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px54"
            android:layout_alignBottom="@+id/tv_action_company"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_eee_27"
            android:paddingLeft="@dimen/px24"
            android:paddingRight="@dimen/px24"
            android:text="参与投票"
            android:gravity="center_vertical"
            android:textColor="@color/color_blue_level6"
            android:textSize="@dimen/px28"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>