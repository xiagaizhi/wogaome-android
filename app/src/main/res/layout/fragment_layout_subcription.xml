<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px110"
        android:layout_marginLeft="@dimen/px36"
        android:layout_marginRight="@dimen/px36">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订阅专栏"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px64"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_anim_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>


    <com.yufan.library.view.ptr.PtrClassicFrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/ptr"
        android:background="@color/white"
        android:layout_height="match_parent">
        <com.yufan.library.view.recycler.YFRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerview"
            app:needLoadMore="true"
            android:background="#fff2f4f7"
            />
    </com.yufan.library.view.ptr.PtrClassicFrameLayout>
</LinearLayout>