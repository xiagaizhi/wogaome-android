<?xml version="1.0" encoding="utf-8"?>
<com.yufan.library.view.ptr.PtrClassicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f7f7f7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px110"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px36"
                    android:text="我的"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px64"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="@dimen/px46"
                    android:layout_height="@dimen/px50"
                    android:layout_marginTop="@dimen/px21">

                    <ImageView
                        android:id="@+id/img_messgae"
                        android:layout_width="@dimen/px46"
                        android:layout_height="@dimen/px46"
                        android:src="@drawable/ic_toolbar_message" />

                    <View
                        android:id="@+id/view_red_point"
                        android:layout_width="@dimen/px16"
                        android:layout_height="@dimen/px16"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:background="@drawable/red_point_widget_bg_shape" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_player"
                    android:layout_width="@dimen/px46"
                    android:layout_height="@dimen/px46"
                    android:layout_marginLeft="@dimen/px36"
                    android:layout_marginRight="@dimen/px36"
                    android:layout_marginTop="@dimen/px21"
                    android:src="@drawable/ic_toolbar_player_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_personal_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px218"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/px180"
                    android:layout_height="@dimen/px180"
                    android:layout_marginLeft="@dimen/px18">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/bg_mine_head_shadow"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/img_head"
                        android:layout_width="@dimen/px144"
                        android:layout_height="@dimen/px144"
                        android:layout_centerInParent="true"
                        fresco:placeholderImageScaleType="focusCrop"
                        fresco:roundAsCircle="true" />

                    <ImageView
                        android:id="@+id/img_mylevel"
                        android:layout_width="@dimen/px51"
                        android:layout_height="@dimen/px50"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/px16"
                        android:layout_marginRight="@dimen/px26"
                        android:src="@drawable/ic_level_bronze" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px12"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px59"
                        android:text="乐客"
                        android:textColor="@color/color_gray_level3"
                        android:textSize="@dimen/px36" />

                    <ImageView
                        android:id="@+id/img_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px14"
                        android:layout_marginTop="@dimen/px58"
                        android:layout_toRightOf="@+id/tv_name"
                        android:src="@drawable/ic_my_vip" />

                    <TextView
                        android:id="@+id/tv_personal_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="@dimen/px20"
                        android:text="这家伙太懒了，什么都没留下。"
                        android:textColor="@color/color_gray_level9"
                        android:textSize="@dimen/px24" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/px36"
                    android:src="@drawable/ic_arrows_right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_roadshow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_roadshow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="8"
                            android:textColor="@color/color_gray_level3"
                            android:textSize="@dimen/px34" />

                        <TextView
                            android:id="@+id/tv_roadshow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的路演"
                            android:textColor="@color/color_gray_level6"
                            android:textSize="@dimen/px28" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/px1"
                    android:layout_height="@dimen/px78"
                    android:background="@color/color_gray_levele" />

                <RelativeLayout
                    android:id="@+id/rl_subscribe"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_subscribe_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="8"
                            android:textColor="@color/color_gray_level3"
                            android:textSize="@dimen/px34" />

                        <TextView
                            android:id="@+id/tv_subscribe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的订阅"
                            android:textColor="@color/color_gray_level6"
                            android:textSize="@dimen/px28" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/px1"
                    android:layout_height="@dimen/px78"
                    android:background="@color/color_gray_levele" />

                <RelativeLayout
                    android:id="@+id/rl_vote"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_vote_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="8"
                            android:textColor="@color/color_gray_level3"
                            android:textSize="@dimen/px34" />

                        <TextView
                            android:id="@+id/tv_vote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的投票"
                            android:textColor="@color/color_gray_level6"
                            android:textSize="@dimen/px28" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_wallet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px36"
                    android:src="@drawable/ic_mine_wallet" />

                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_toRightOf="@+id/img_wallet"
                    android:text="我的钱包"
                    android:textColor="@color/color_gray_level3"
                    android:textSize="@dimen/px32"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_alignLeft="@+id/tv_wallet"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_levele" />

                <ImageView
                    android:id="@+id/img_arrows_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px36"
                    android:src="@drawable/ic_arrows_right" />

                <TextView
                    android:id="@+id/tv_mylkc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px68"
                    android:singleLine="true"
                    android:text="123.1221LKC"
                    android:textColor="@color/color_gray_level9"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_level"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px36"
                    android:src="@drawable/ic_mine_level" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_toRightOf="@+id/img_level"
                    android:text="我的等级"
                    android:textColor="@color/color_gray_level3"
                    android:textSize="@dimen/px32"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_alignLeft="@+id/tv_level"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_levele" />

                <ImageView
                    android:id="@+id/img_arrows_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px36"
                    android:src="@drawable/ic_arrows_right" />

                <TextView
                    android:id="@+id/tv_mylevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px68"
                    android:singleLine="true"
                    android:text="黄金"
                    android:textColor="@color/color_gray_level9"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_myvip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_myvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px36"
                    android:src="@drawable/ic_mine_member" />

                <TextView
                    android:id="@+id/tv_myvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_toRightOf="@+id/img_myvip"
                    android:text="我的会员"
                    android:textColor="@color/color_gray_level3"
                    android:textSize="@dimen/px32"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_arrows_myvip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px36"
                    android:src="@drawable/ic_arrows_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px68"
                    android:singleLine="true"
                    android:textColor="@color/color_gray_level9"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px36"
                    android:src="@drawable/ic_mine_share" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_toRightOf="@+id/img_share"
                    android:text="分享好友"
                    android:textColor="@color/color_gray_level3"
                    android:textSize="@dimen/px32"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_alignLeft="@+id/tv_share"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_levele" />

                <ImageView
                    android:id="@+id/img_arrows_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px36"
                    android:src="@drawable/ic_arrows_right" />

                <TextView
                    android:id="@+id/tv_share_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px68"
                    android:singleLine="true"
                    android:text="已邀请：100名好友"
                    android:textColor="@color/color_gray_level9"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px36"
                    android:src="@drawable/ic_mine_setting" />

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px16"
                    android:layout_toRightOf="@+id/img_setting"
                    android:text="设置"
                    android:textColor="@color/color_gray_level3"
                    android:textSize="@dimen/px32"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_alignLeft="@+id/tv_setting"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_levele" />

                <ImageView
                    android:id="@+id/img_arrows_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px36"
                    android:src="@drawable/ic_arrows_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px68"
                    android:singleLine="true"
                    android:textColor="@color/color_gray_level9"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</com.yufan.library.view.ptr.PtrClassicFrameLayout>




