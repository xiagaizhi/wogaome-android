<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/px560"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_bg_common_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px62"
            android:layout_marginRight="@dimen/px62"
            android:layout_marginTop="@dimen/px40"
            android:gravity="center"
            android:textColor="@color/color_gray_level3"
            android:textSize="@dimen/px34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginRight="@dimen/px24"
            android:layout_marginTop="@dimen/px43"
            android:background="@color/color_E5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px95"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_blue_level6"
                android:textSize="@dimen/px30" />

            <View
                android:id="@+id/view_line"
                android:layout_width="@dimen/px1"
                android:layout_height="match_parent"
                android:background="@color/color_E5E5E5" />

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_blue_level6"
                android:textSize="@dimen/px30" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
