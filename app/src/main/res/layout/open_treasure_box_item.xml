<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/px202"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_treasure_root"
            android:layout_width="@dimen/px202"
            android:layout_height="@dimen/px170"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/id_treasure_box_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/treasure_box_selector" />

            <TextView
                android:id="@+id/id_treasure_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/px23"
                android:text="500宝箱"
                android:textColor="@color/color_f67b29"
                android:textSize="@dimen/px34" />

            <TextView
                android:id="@+id/id_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/px28"
                android:text="500元"
                android:textColor="@color/color_gray_level6"
                android:textSize="@dimen/px30" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px36" />

    </LinearLayout>

</RelativeLayout>
