<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="@dimen/y618"
        android:layout_gravity="center"
        android:layout_height="@dimen/y618"
        android:layout_margin="1dp"
        android:src="@drawable/play_disc" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv"
        fresco:placeholderImage="@drawable/placeholder_disk_play_program"
        android:layout_width="@dimen/y420"
        android:layout_height="@dimen/y420"
        android:layout_gravity="center" />
</FrameLayout>