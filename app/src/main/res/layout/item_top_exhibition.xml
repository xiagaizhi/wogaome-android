<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_marginLeft="@dimen/px36"
            android:layout_marginRight="@dimen/px36">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路演厅"
                android:id="@+id/tv_anim_title"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px64"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_anim_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/y15"
                android:src="@drawable/anim_player_blue"
                />
            <ImageView
                android:id="@+id/img_history_icon"
                android:layout_toLeftOf="@+id/iv_anim_icon"
                android:layout_marginRight="@dimen/px40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/y15"
                android:src="@drawable/ic_history_exc"
                />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>