<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/px36"
        android:paddingTop="@dimen/px50"
        android:paddingLeft="@dimen/px36"
        android:paddingBottom="@dimen/px40">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px18"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_smallr"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_choose_city"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="@dimen/px80"
                android:gravity="center"
                android:text="请选择城市"
                android:textSize="@dimen/px30" />
            <ImageView
                android:layout_marginRight="@dimen/px20"
                android:layout_weight="1"
                android:layout_width="@dimen/px30"
                android:layout_height="@dimen/px80"
                android:src="@drawable/ic_arr_godownbig"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px18"
            android:background="@drawable/shape_bg_smallr"
           >
            <TextView
                android:id="@+id/tv_choose_work"
                android:singleLine="true"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80"
                android:gravity="center"
                android:text="请选择行业"
                android:textSize="@dimen/px30"
                />
            <ImageView
                android:layout_marginRight="@dimen/px20"
                android:layout_weight="1"
                android:layout_width="@dimen/px30"
                android:layout_height="@dimen/px80"
                android:src="@drawable/ic_arr_godownbig"
                />
        </LinearLayout>
    </LinearLayout>

    <com.yufan.library.view.recycler.YFRecyclerView
        android:layout_below="@+id/li"
        android:layout_marginBottom="@dimen/px15"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview"
        app:needLoadMore="true"
        android:background="#fff2f4f7"
        />


</RelativeLayout>