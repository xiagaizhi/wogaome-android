<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/px560"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_bg_common_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px62"
            android:layout_marginRight="@dimen/px62"
            android:layout_marginTop="@dimen/px40"
            android:gravity="center"
            android:text="选择操作"
            android:textColor="@color/color_gray_level3"
            android:textSize="@dimen/px34" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/px43"
            android:background="@color/color_E5E5E5" />

        <com.yufan.library.view.recycler.YFRecyclerView
            android:id="@+id/yf_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:needLoadMore="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/color_E5E5E5" />

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px95"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_blue_level6"
            android:textSize="@dimen/px30" />

    </LinearLayout>

</RelativeLayout>
