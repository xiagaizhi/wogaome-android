<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/white"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px110"
            android:layout_marginLeft="@dimen/px36"
            android:layout_marginRight="@dimen/px36">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅专栏"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px64"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_anim_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/px36"
    android:layout_marginBottom="@dimen/px40"
    android:id="@+id/rl_searchbar"
    android:layout_marginTop="@dimen/px36"
    android:layout_marginRight="@dimen/px36"
    android:background="@drawable/shape_bg_f0f0f0_10"
    android:layout_height="@dimen/px60">
    <TextView
        android:id="@+id/tv_searchbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索音频/活动"
        android:drawablePadding="3dp"
        android:drawableLeft="@drawable/ic_searchbar"
       android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px30"
        android:textColor="@color/color_gray_levelc"
        android:textSize="@dimen/px24" />
</RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px436">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px436"
        android:layout_marginLeft="@dimen/px36"
        android:layout_marginRight="@dimen/px36"
        android:clipChildren="false"
        />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="48dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/px36"
        android:layout_marginRight="@dimen/px36"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/px40"
        android:layout_marginBottom="@dimen/px50"
        android:background="@color/color_gray_levele"

        />

    <TextView
        android:layout_width="wrap_content"
        android:text="精品大师课"
        android:textSize="@dimen/px42"
        android:textColor="@color/color_gray_level3"
        android:layout_marginLeft="@dimen/px36"
        android:layout_marginRight="@dimen/px36"
        android:layout_height="wrap_content" />
</LinearLayout>