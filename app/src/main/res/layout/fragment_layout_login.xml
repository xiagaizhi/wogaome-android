<?xml version="1.0" encoding="utf-8"?>
<com.yufan.library.view.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/resize_login"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/splash"
        fresco:placeholderImageScaleType="focusCrop"
        />
    <!-- other attributes -->

    <TextView
        android:layout_width="wrap_content"
        android:text="乐"
        android:textSize="65sp"
        android:textStyle="bold"
        android:id="@+id/tv_login_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light_blue_99"
        android:layout_marginTop="63dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tv_login_title"
        android:layout_marginTop="@dimen/px90"
        android:id="@+id/ll_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/px80"
            android:layout_marginLeft="@dimen/px80"
            android:layout_height="@dimen/px100">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请输入你的手机号"

                    android:background="@null"
                    android:id="@+id/et_phone"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/px80"
            android:layout_marginLeft="@dimen/px80"
            android:layout_height="@dimen/px100">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:hint="请输入登录密码"

                    android:background="@null"
                    android:id="@+id/et_password"
                    android:layout_height="match_parent" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/cb_showeye"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="忘记密码"
                    android:textColor="@color/color_gray_6"
                    android:textSize="15sp"
                    android:id="@+id/tv_forgetPassword"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_1"
                />

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/px60"
            android:layout_marginTop="@dimen/px60"
            android:layout_marginRight="@dimen/px60"
            android:text="登录"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="新用户注册"
            android:id="@+id/tv_register"
            android:layout_marginTop="@dimen/px30"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.yufan.library.view.ResizeLayout>
