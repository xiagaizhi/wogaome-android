<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/iv_logo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_login_logo"
        android:layout_marginTop="@dimen/y167"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y140"
        android:id="@+id/rl_login_weixin"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/rl_login_phone"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/selector_big_btn_blue"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
           android:layout_centerInParent="true"
            android:drawableLeft="@drawable/ic_login_phone"
            android:text="手机登录"
            android:drawablePadding="5dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:text="新用户注册"
        android:textColor="@color/color_gray_level6"
        android:textSize="15sp"
        android:id="@+id/tv_register"
        android:layout_marginTop="@dimen/y50"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />



</LinearLayout>
